@model Airlines_Ticket_WebApp.Models.Booking
@{
    ViewData["Title"] = "E-ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="font-weight-bold">My booking</h2>
        </div>
    </div>

    <!-- Progress Bar -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="progress" style="height: 4px; background-color: #e9ecef;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <div class="text-center">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 25px; height: 25px;">✓</div>
                    <small>Booking</small>
                </div>
                <div class="text-center">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 25px; height: 25px;">✓</div>
                    <small>Purchase</small>
                </div>
                <div class="text-center">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 25px; height: 25px;">✓</div>
                    <small>Get your E-ticket</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Success message -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center text-danger mb-3">
                        <div class="rounded-circle bg-light text-danger border border-danger d-flex align-items-center justify-content-center mr-2" style="width: 28px; height: 28px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <h5 class="mb-0">Your flight is booked successfully!</h5>
                    </div>
                    <p>Present E-ticket and valid identification at check-in</p>
                </div>
            </div>

            <!-- First flight -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded p-1 mr-2">
                                    <img src="https://via.placeholder.com/24x24" alt="Cloudy Airlines" class="img-fluid">
                                </div>
                                <span>Cloudy Airlines</span>
                            </div>
                            <div class="mb-2">
                                <span class="d-block">Passenger: <strong>ANNA ANDERSON</strong></span>
                                <span class="d-block text-primary"><i class="fas fa-plane"></i> Economy</span>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <h4 class="text-danger">23:15</h4>
                                    <div>Houston (HOU)</div>
                                    <small class="text-muted">6 Feb, 2023</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-danger">1:25</h4>
                                    <div>Las Vegas (LAS)</div>
                                    <small class="text-muted">10 Feb, 2023</small>
                                </div>
                            </div>

                            <div class="my-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                                    <div class="border-top border-danger w-100 mx-2"></div>
                                    <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                                </div>
                                <div class="text-center">
                                    <span class="badge badge-light">2h10m</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <span class="d-block">Check-in: <strong>9th Feb 2023 at 21:20</strong></span>
                                <small class="text-muted">*All time displayed are local</small>
                            </div>
                        </div>
                        <div class="col-md-4 border-left">
                            <div class="text-right mb-2">
                                <span class="d-inline-block">
                                    <i class="fas fa-suitcase"></i> 2×23kg
                                </span>
                                <span class="d-inline-block ml-2">
                                    <i class="fas fa-briefcase"></i> 1×7kg
                                </span>
                            </div>
                            <div class="bg-primary text-white p-3 mb-3 text-center">
                                <h5 class="mb-1">E-flight</h5>
                                <div class="small">Booking ID</div>
                                <div class="font-weight-bold h5 mb-2">65980165</div>
                                <div class="small">Airline Booking Code</div>
                                <div class="font-weight-bold mb-3">CA-6018</div>
                                <img src="https://via.placeholder.com/120x40" alt="Barcode" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Second flight -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded p-1 mr-2">
                                    <img src="https://via.placeholder.com/24x24" alt="Cloudy Airlines" class="img-fluid">
                                </div>
                                <span>Cloudy Airlines</span>
                            </div>
                            <div class="mb-2">
                                <span class="d-block">Passenger: <strong>ANNA ANDERSON</strong></span>
                                <span class="d-block text-primary"><i class="fas fa-plane"></i> Economy</span>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <h4 class="text-danger">2:25</h4>
                                    <div>Las Vegas (LAS)</div>
                                    <small class="text-muted">10 Feb, 2023</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-danger">7:40</h4>
                                    <div>Los Angeles (LAX)</div>
                                    <small class="text-muted">10 Feb, 2023</small>
                                </div>
                            </div>

                            <div class="my-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                                    <div class="border-top border-danger w-100 mx-2"></div>
                                    <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                                </div>
                                <div class="text-center">
                                    <span class="badge badge-light">5h15m</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <span class="d-block">Check-in: <strong>10th Feb 2023 at 1:40</strong></span>
                                <small class="text-muted">*All time displayed are local</small>
                            </div>
                        </div>
                        <div class="col-md-4 border-left">
                            <div class="text-right mb-2">
                                <span class="d-inline-block">
                                    <i class="fas fa-suitcase"></i> 2×23kg
                                </span>
                                <span class="d-inline-block ml-2">
                                    <i class="fas fa-briefcase"></i> 1×7kg
                                </span>
                            </div>
                            <div class="bg-primary text-white p-3 mb-3 text-center">
                                <h5 class="mb-1">E-flight</h5>
                                <div class="small">Booking ID</div>
                                <div class="font-weight-bold h5 mb-2">59952235</div>
                                <div class="small">Airline Booking Code</div>
                                <div class="font-weight-bold mb-3">CA-5923</div>
                                <img src="https://via.placeholder.com/120x40" alt="Barcode" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-primary btn-block">Send to my e-mail</button>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Price details card -->
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center">
                        <div class="text-primary mr-2">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <h5 class="mb-0 text-primary">Price details</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Adult basic fee</span>
                        <span class="text-right">$150</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span class="text-right">Included</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Regular total price</span>
                        <span class="text-right">$150</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 text-primary">
                        <span>Save</span>
                        <span class="text-right">-$1.5</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between font-weight-bold">
                        <span>Total</span>
                        <span class="text-right text-primary">$148.5</span>
                    </div>
                </div>
            </div>

            <!-- Flight details card -->
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center">
                        <div class="text-primary mr-2">
                            <i class="fas fa-plane"></i>
                        </div>
                        <h5 class="mb-0 text-primary">Houston - Los Angeles</h5>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Outbound flight -->
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="rounded bg-primary text-white p-1 mr-2" style="width: 24px; height: 24px; font-size: 12px; text-align: center;">
                                <i class="fas fa-plane"></i>
                            </div>
                            <div>
                                <small class="text-muted">Cloudy Airlines</small>
                            </div>
                            <div class="ml-auto text-right">
                                <small class="text-muted">6<br>Feb, 2023</small>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">HOU - LAS</span>
                            <small class="text-primary">Economy</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>23:15 - 1:25</strong>
                                <div><small class="text-muted">Duration: 2h10m</small></div>
                            </div>
                            <div class="text-right">
                                <small class="text-danger">Direct</small>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-primary"><i class="fas fa-undo-alt"></i> Refundable</small>
                        </div>
                        <div>
                            <small class="text-primary"><i class="fas fa-calendar-alt"></i> Reschedule Available</small>
                        </div>
                    </div>

                    <!-- Return flight -->
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <div class="rounded bg-primary text-white p-1 mr-2" style="width: 24px; height: 24px; font-size: 12px; text-align: center;">
                                <i class="fas fa-plane"></i>
                            </div>
                            <div>
                                <small class="text-muted">Cloudy Airlines</small>
                            </div>
                            <div class="ml-auto text-right">
                                <small class="text-muted">10<br>Feb, 2023</small>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">LAS - LAX</span>
                            <small class="text-primary">Economy</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>2:25 - 7:40</strong>
                                <div><small class="text-muted">Duration: 5h15m</small></div>
                            </div>
                            <div class="text-right">
                                <small class="text-danger">Direct</small>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-primary"><i class="fas fa-undo-alt"></i> Refundable</small>
                        </div>
                        <div>
                            <small class="text-primary"><i class="fas fa-calendar-alt"></i> Reschedule Available</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
} 