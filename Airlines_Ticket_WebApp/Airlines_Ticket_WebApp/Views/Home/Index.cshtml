@{
    ViewData["Title"] = "Trang Chủ";
}
<div class="position-relative">
    <!-- Ảnh nền -->
    <img src="/images/bgv4.jpg" class="img-fluid w-100" style="height: 100vh; object-fit: cover;" alt="Background">

    <!-- Lớp phủ mờ -->
    <div class="position-absolute top-0 start-0 w-100 h-100 background-overlay d-flex flex-column align-items-center justify-content-center text-white text-center">
        <h1 class="fw-bold display-5" data-aos="fade-down">✈️ Hệ Thống Đặt Vé</h1>
        <p class="lead" data-aos="fade-up">Đặt vé máy bay nhanh chóng và tiện lợi ngay bây giờ!</p>

        <!-- Form đặt vé -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4 bg-light bg-opacity-75 rounded-4 backdrop-blur" data-aos="fade-left">
                <h4 class="text-center text-danger fw-bold">Đặt vé ngay!</h4>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Loại vé:</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="tripType" id="oneWay" value="one-way" checked>
                                <label class="form-check-label" for="oneWay">Một chiều</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="tripType" id="roundWay" value="round-trip">
                                <label class="form-check-label" for="roundWay">Khứ hồi</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 form-floating-custom">
                        <input type="text" id="diemDi" class="form-control" placeholder=" " required>
                        <label for="diemDi" class="form-label">Điểm đi</label>
                    </div>
                    <div class="mb-3 form-floating-custom">
                        <input type="text" id="diemDen" class="form-control" placeholder="" required>
                        <label for="diemDen" class="form-label">Điểm đến</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày đi</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="mb-3" id="returnDateGroup" style="display: none;">
                        <label class="form-label">Ngày về</label>
                        <input type="date" class="form-control">
                    </div>
                    <button class="btn btn-danger btn-lg w-100 fw-bold">Tìm Chuyến Bay</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .background-overlay {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const oneWay = document.getElementById("oneWay");
        const roundWay = document.getElementById("roundWay");
        const returnDateGroup = document.getElementById("returnDateGroup");

        oneWay.addEventListener("change", function () {
            returnDateGroup.style.display = "none";
        });

        roundWay.addEventListener("change", function () {
            returnDateGroup.style.display = "block";
        });

        if (oneWay.checked) {
            returnDateGroup.style.display = "none";
        }
    });
</script>
