<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống đặt vé máy bay</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
    <style>
        body {
            background-color: #1a1a1a;
            color: white;
        }
        .navbar {
            background-color: #ff4c4c;
        }
        .footer {
            background-color: #222;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">✈️ Hệ Thống Đặt Vé</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang Chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Flights/Search">Tìm Chuyến Bay</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Tickets/Booking">Đặt Vé</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fas fa-user"></i> Đăng Nhập</a></li>
                </ul>
            </div>
        </div>
    </nav>

        @RenderBody()


    <footer class="footer mt-4">
        <p>&copy; 2025 Hệ thống đặt vé máy bay. Mọi quyền được bảo lưu.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
